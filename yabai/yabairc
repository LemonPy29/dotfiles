sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

yabai -m config layout bsp

yabai -m config mouse_modifier alt
yabai -m config mouse_action1 move

yabai -m config --space 1 top_padding    7
yabai -m config --space 1 bottom_padding 7
yabai -m config --space 1 left_padding   7
yabai -m config --space 1 right_padding  7
yabai -m config --space 1 window_gap     7

yabai -m config --space 2 top_padding    7
yabai -m config --space 2 bottom_padding 7
yabai -m config --space 2 left_padding   7
yabai -m config --space 2 right_padding  7
yabai -m config --space 2 window_gap     7

yabai -m config --space 3 top_padding    15
yabai -m config --space 3 left_padding   120
